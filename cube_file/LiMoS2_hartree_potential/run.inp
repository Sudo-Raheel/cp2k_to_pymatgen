&GLOBAL
  RUN_TYPE  ENERGY
  PROJECT_NAME  run
  PRINT_LEVEL  HIGH
&END GLOBAL
&FORCE_EVAL
  METHOD  QUICKSTEP
  &DFT
    BASIS_SET_FILE_NAME  GTH_BASIS_SETS
    BASIS_SET_FILE_NAME  BASIS_MOLOPT_UCL
    POTENTIAL_FILE_NAME  GTH_POTENTIALS
    &DENSITY_FITTING
     &PROGRAM_RUN_INFO HIGH  
     &END PROGRAM_RUN_INFO 
    &END DENSITY_FITTING
    &POISSON
         PERIODIC XYZ
         #POISSON_SOLVER IMPLICIT
    &END POISSON
    &XC
      &XC_FUNCTIONAL  PBE
      &END XC_FUNCTIONAL
    &END XC
    CHARGE  0
    MULTIPLICITY  0
    &QS
      METHOD  GPW
    &END QS
    CORE_CORR_DIP .FALSE.
    SURFACE_DIPOLE_CORRECTION .TRUE.
    SURF_DIP_DIR  Z
    SURF_DIP_POS  15.0
    &SCF
      SCF_GUESS RESTART
      MAX_SCF  200
      EPS_SCF  1.0E-6
      &OUTER_SCF
	MAX_SCF 6
      &END OUTER_SCF
      ADDED_MOS 50
      &DIAGONALIZATION
        ALGORITHM  STANDARD
      &END DIAGONALIZATION
      &MIXING
        METHOD BROYDEN_MIXING
        ALPHA 0.1
        BETA 1.5
      &END MIXING
      &SMEAR
        METHOD FERMI_DIRAC
        FIXED_MAGNETIC_MOMENT 0.0
      &END SMEAR
    &END SCF
    &MGRID
      NGRIDS  4
      CUTOFF  700
      REL_CUTOFF  70
    &END MGRID
    &PRINT
      &MO
        OCCUPATION_NUMBERS .TRUE.
	#MO_INDEX_RANGE 200 215
	EIGENVALUES .TRUE.
	&EACH
          QS_SCF 50
        &END EACH
        ADD_LAST NUMERIC
      &END MO
    &END PRINT
  &END DFT 
  &SUBSYS
    &TOPOLOGY
      COORD_FILE_FORMAT  XYZ
      COORD_FILE_NAME  ./config_1.xyz
      #&CENTER_COORDINATES .TRUE.
      #&END CENTER_COORDINATES
    &END TOPOLOGY
    &CELL
      ABC  12.727 11.093  30.00
      ALPHA_BETA_GAMMA 90.00 90.00 90.00
      PERIODIC XYZ
    &END CELL
    &KIND Mo
      ELEMENT Mo	
      BASIS_SET  TZV2P-MOLOPT-SR-GTH-q14
      POTENTIAL  GTH-PBE-q14
    &END KIND
    &KIND S
      ELEMENT S
      BASIS_SET  TZV2P-GTH-q6
      POTENTIAL  GTH-PBE-q6
    &END KIND
    &KIND Li
      ELEMENT Li
      BASIS_SET  TZV2P-MOLOPT-SR-GTH-q3
      POTENTIAL  GTH-PBE-q3
    &END KIND      
  &END SUBSYS
  &PRINT
    &TOTAL_NUMBERS  ON
    &END TOTAL_NUMBERS
  &END PRINT
&END FORCE_EVAL
